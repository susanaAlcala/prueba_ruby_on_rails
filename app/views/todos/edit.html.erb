<%= form_with(model: @todo, local: true) do |f| %>
    <h1>Ingrese una descripcion</h1>
    <br>
    <div class= 'form-group'>
        <%= f.label 'Descripción' %>
        <%= f.text_field :description %>
    </div>
    
    <div class= 'form-group'>
        <%= f.check_box :completed %> <%= f.label :completed, '¿Completado?'%>  
    </div>
    
    <div class= 'form-group'>
        <%= f.submit 'Crear' %>
    </div>

<% end %>