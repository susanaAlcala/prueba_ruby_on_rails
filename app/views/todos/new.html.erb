<%= form_with(model: @todo, local: true) do |f| %>
    <h3 class= text-center>CREAR NUEVA TAREA</h3>
    <br>
    <h3>Ingrese una descripcion</h3>
    <br>
    <div class= 'form-group'>
        <%= f.label 'Descripción' %>
        <%= f.text_field :description %>
    </div>
    
    <div class= 'form-group'>
        <%= f.check_box :completed %> <%= f.label :completed, '¿Completado?'%>  
    </div>
    
    <div class= 'form-group'>
        <%= f.submit 'Crear' %>
    </div>
<br>
<% end %>