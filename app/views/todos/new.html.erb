<br>

<%= form_with(model: @todo, local: true) do |f| %>
    <h2 class= text-center>CREAR NUEVA TAREA</h2>
    <br>

<div class="card card-body bg-light">
    <h3>Ingrese una tarea</h3>
    <br>
    <div class= 'form-group'>
        <%= f.label 'Descripción: ' %>
        <%= f.text_field :description %>
    </div>
    
    <div class= 'form-group'>
        <%= f.check_box :completed %> <%= f.label :completed, '¿Completado?'%>  
    </div>
    
    <div class= 'form-group'>
        <%= f.submit 'Crear' %>
    </div>
<% end %>

</div>